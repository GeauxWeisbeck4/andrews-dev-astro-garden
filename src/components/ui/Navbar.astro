<div class="flex flex-col items-center bg-white px-4 py-6">
  <!-- Shared max width container -->
  <div class="max-w-4xl w-full">
    <!-- Title area-->
    <div class="text-center mb-4">
  <h1 class="text-xl"><strong class="bg-slate-950 text-white hover:text-teal-500 hover:underline border-s-2 border-slate-700 rounded-md px-4 py-2">WeisGarden</strong> - ðŸŒ¿ Digital Garden by Andrew Weisbeck</h1> 
</div>
<!-- Bordered box matching width -->
<div class="border border-black rounded-md px-4 py-4 mb-6 bg-slate-100">
  
  <!-- Heading -->
  <h2 class="text-lg font-semibold text-left">
    Andrew Weisbeck
  </h2>

  <!-- Description -->
  <p class="mt-1 text-gray-700 text-left">
    A place for collecting thoughts, notes, ideas, and more â€” my own corner of the internet to share with the world.
  </p>

  <!-- Link (aligned right) -->
  <div class="mt-2 flex justify-end items-center space-x-1">
    <a 
      class="text-blue-500 underline font-semibold hover:text-blue-700 hover:font-bold flex items-center"
      href="https://andrews-wiki.netlify.app"
    >
       <!-- Chain link icon from Heroicons (outline) -->
          <svg xmlns="http://www.w3.org/2000/svg"
               fill="none"
               viewBox="0 0 24 24"
               stroke-width="2"
               stroke="currentColor"
               class="w-4 h-4 mr-1"
               aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M13.828 10.172a4 4 0 010 5.656l-3.536 3.536a4 4 0 01-5.656-5.656l1.414-1.414m5.656-5.656l3.536-3.536a4 4 0 015.656 5.656l-1.414 1.414" />
          </svg>
      https://andrews-wiki.netlify.app
      <!-- Icon -->
      
    </a>
  </div>

</div>


<!-- Navigation + Search container -->

<nav 
  class="text-center font-medium text-gray-700 flex-1"
  x-data="{
    navbarLinks: [
      { path: '/about', title: 'About' },
      { path: '/notes', title: 'Notes' },
      { path: '/posts', title: 'Posts' },
      { path: '/projects', title: 'Projects' },
      { path: '/links', title: 'Links' },
      { path: '/support', title: 'Support' },
    ]
  }"
>
  <template x-for="(link, i) in navbarLinks" :key="link.path">
    <span>
      <a class="inline-block px-3 py-2 hover:text-teal-600 transition-colors" :href="link.path" x-text="link.title"></a>
        <template x-if="i != navbarLinks.length - 1">
          <strong class="text-black"> | </strong>
        </template>
      </span>
    </template>
  </nav>

  <!-- Search bar -->
  <form 
    class="relative max-w-xs mx-auto mt-4 w-full space-x-2 flex items-center"
    x-data="{ searchTerm: '' }"
    @submit.prevent="alert('Searching for: ' + searchTerm)"
    >
    <label for="search" class="sr-only">Search</label>

    <input
      id="search"
      name="search"
      type="search"
      placeholder="Search..."
      x-model="searchTerm"
      class="flex-grow w-full rounded-md border border-gray-300 pl-10 pr-3 py-2 text-sm placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
    />

    <button
      type="submit"
      class="inline-flex items-center px-4 py-2 bg-teal-600 text-white rounded-md hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500"
    >
      Search
    </button>

    
  <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
    <!-- Search icon -->
    <svg
      class="h-5 w-5 text-gray-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1111.35 3a7.5 7.5 0 015.3 13.65z"
      />
    </svg>
  </div>
  </form>
</div>
</div>


